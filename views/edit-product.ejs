<%- include('./layout/head.ejs') %> <% if(errorMessage) { %>
<div class="row content ">
  <div class="col-sm-12 ">
    <div class="col-sm-4 col-sm-offset-4 error-box">
      <p class="h5 text-center"><%= errorMessage %></p>
    </div>
  </div>
</div>
<% } %>
<div class="<%= errorMessage ? '' : 'add-product-container' %> container">
  <div class="row">
    <form
      class="form-horizontal"
      action="/admin/edit-product/<%= book.id %>"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <label class="control-label col-sm-3" for="pwd">Name</label>
        <div class="col-sm-6">
          <input
            type="text"
            class="form-control"
            id="pwd"
            value="<%= book.name %>"
            name="name"
          />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="pwd">Author:</label>
        <div class="col-sm-6">
          <input
            type="text"
            class="form-control"
            id="pwd"
            value="<%= book.author %>"
            name="author"
          />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="pwd">Price:</label>
        <div class="col-sm-6">
          <input
            type="text"
            class="form-control"
            id="pwd"
            value="<%= book.price %>"
            name="price"
          />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="categories"
          >Categories</label
        >
        <div class="col-sm-6">
          <select class="form-control" name="category" id="categories">
            <option value="romance" <%= book.category == 'romance' ? 'selected' : '' %>>Romance</option>
            <option value="science" <%= book.category == 'business' ? 'selected' : '' %>>Business</option>
            <option value="politic" <%= book.category == 'scienceFiction' ? 'selected' : '' %>>scienceFiction</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="pwd">Image:</label>
        <div class="col-sm-6">
          <input
            type="file"
            class="form-control"
            id="pwd"
            value="<%= book.image %>"
            name="image"
          />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3" for="pwd">Description:</label>
        <div class="col-sm-6">
          <textarea name="description" id="" cols="75" rows="5">
<%= book.description %></textarea
          >
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
          <button type="submit" class="btn btn-green">Update Product</button>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('./layout/end.ejs') %>
